# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/suuq_db
# Alternative DB configuration (if using separate vars)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=username
DB_PASSWORD=password
DB_DATABASE=suuq_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Swagger Configuration
SWAGGER_ENABLED=true

# Database Migration
AUTO_MIGRATE=true

# AWS S3 Configuration
S3_ACCESS_KEY_ID=your-aws-access-key
S3_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Rate Limiting Configuration
THROTTLE_TTL=60000
THROTTLE_LIMIT=60

# Email Configuration (if using SMTP)
# Map to code's expected keys
EMAIL_HOST=smtp.postmarkapp.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-smtp-username
EMAIL_PASS=your-smtp-password
EMAIL_FROM="Suuq Marketplace <no-reply@suuq.com>"
ADMIN_URL=https://admin.example.com

# Firebase Configuration (if using Firebase services)
FIREBASE_PROJECT_ID=your-firebase-project-id

# Twilio Verify (server-side secrets only; do not commit real values)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_VERIFY_SERVICE_SID=

# Redis (optional; used for OTP rate limiting if enabled)
# Set REDIS_ENABLED=true and provide REDIS_URL (or host/port) to enable
REDIS_ENABLED=false
# REDIS_URL=redis://127.0.0.1:6379
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379